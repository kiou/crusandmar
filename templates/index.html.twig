{% extends 'app/layout.html.twig' %}

{% block content %}

    <section class="headerPage headerAccueil">
        <div class="inner">
            <div class="headerPageContent"  style="background-image:url({{ asset('img/upload/' ~ header.image) }})">
                <div class="headerPageTitle">
                    <div>
                        <h1>{{ header.title }}</h1>
                        <div class="headerPageP">
                            <p>{{ header.accroche|raw }}</p>
                        </div>
                        {% if header.lien is not null %}
                            <div class="headerPageLien">
                                <a href="{{ header.lien }}" class="btn">{{ 'btn.showmore'|trans }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
     
    <section class="patern1">
        <div class="inner">
        </div>
    </section>

    <section class="quality">
        <div class="inner">
            <div class="qualityLeft">
                <img src="{{ asset('img/quality-home.png') }}">
                <div class="patern2"></div>
            </div>

            <div class="qualityRight">
                <h2>quality</h2>
                <div class="qualityRightContent">    
                    {{ render(controller('App\\Controller\\BlockController::view', {'position': 'qualityhome-block'} )) }}
                </div>
                <a href="{{ render(controller('App\\Controller\\PageController::getLink',{ 'position': 'quality-page' })) }}" class="btn">{{ 'btn.showmore'|trans }}</a>
            </div>

            <div class="clear"></div>
        </div>
    </section>

    <section class="menusHome">
        <div class="inner">
            <div class="menuHome">            
                <img src="{{ asset('img/menuhome1.png') }}">
                <a href="{{ render(controller('App\\Controller\\PageController::getLink',{ 'position': 'about-page' })) }}">{{ 'menu.link1'|trans }}</a>
            </div>

            <div class="menuHome">            
                <img src="{{ asset('img/menuhome2.png') }}">
                <a href="{{ render(controller('App\\Controller\\PageController::getLink',{ 'position': 'products-page' })) }}">{{ 'menu.link2'|trans }}</a>
            </div>

            <div class="menuHome">            
                <img src="{{ asset('img/menuhome3.png') }}">
                <a href="{{ path('app_actualites') }}">{{ 'menu.link3'|trans }}</a>
            </div>

            <div class="menuHome">            
                <img src="{{ asset('img/menuhome4.png') }}">
                <a href="{{ path('app_contact') }}">{{ 'menu.link4'|trans }}</a>
            </div>

            <div class="patern3"></div>
        </div>
    </section>

    <section class="philosophy">
        <div class="inner">
            <div class="philosophyLeft">
                <h2>philosophy</h2>
                <div class="philosophyLeftContent">   
                    {{ render(controller('App\\Controller\\BlockController::view', {'position': 'philosophyhome-block'} )) }}
                </div>
            </div>

            <div class="philosophyRight">
                <img src="{{ asset('img/philosophy1.png') }}" class="philosophyRightImg1">
                <div class="patern4"></div>

                <div class="clear"></div>
            </div>

            <div class="clear"></div>
        </div>
    </section>

    <section class="statistiques">
        <div class="inner">
            {% for statistique in statistiques %}
                <div class="statistique">
                    <h2>{{ statistique.chiffre }}</h2>
                    <p>{{ statistique.title }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <section class="social">
        <div class="inner">
            <h2>social responsability</h2>
            <a href="{{ render(controller('App\\Controller\\PageController::getLink',{ 'position': 'social-page' })) }}" class="btn blanc">{{ 'btn.showmore'|trans }}</a>
            
            <div class="patern5"></div>
        </div>
    </section>

    <section class="patern1">
        <div class="inner">
        </div>
    </section>

    <section class="homeVideo">
        <div class="inner">
            <div class="homeVideoIframe">
                <iframe width="1210" height="550" src="https://www.youtube.com/embed/Ra4EF_gW4wo?si=vQd6EJoJSOdH-32r" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>

            {{ render(controller('App\\Controller\\BlockController::view', {'position': 'videohome-block'} )) }}
        </div>

        <div class="patern6"></div>
    </section>

    <div class="galeries">
        <div class="inner">
            <h2>gallery photo</h2>

            <div class="owl-one owl-carousel owl-theme">
                {% for galerie in galeries %}
                    <div>
                        <img src="{{ asset('img/miniature/' ~ galerie.image) }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}